<Window x:Class="TietokoneTiedotApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tietokoneen tiedot"
        Height="800"
        Width="1200"
        Background="#FF1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Otsikko ja napit -->
        <StackPanel Orientation="Horizontal" Margin="5,5,5,20" VerticalAlignment="Center" HorizontalAlignment="Left">

            <TextBlock Text="Tietokoneen tiedot"
               Margin="0,0,20,0"
               FontSize="28"
               FontWeight="Bold"
               Foreground="White"
               VerticalAlignment="Center"/>

            <!-- Päivitä tiedot -nappi -->
            <Button Content="Päivitä tiedot"
            Margin="0,0,20,0"
            Width="150"
            Height="40"
            Click="PaivitaTiedot_Click"
            Background="#FF007ACC"
            Foreground="White"
            FontWeight="SemiBold"
            BorderThickness="0"
            Cursor="Hand"
            Padding="10,5">
                <Button.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                </Button.Effect>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="8" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Lähetä Pastebiniin -nappi -->
            <Button Content="Lähetä Pastebiniin"
            Margin="0,0,20,0"
            Width="150"
            Height="40"
            Click="LähetäPastebiniin_Click"
            Background="#FF007ACC"
            Foreground="White"
            FontWeight="SemiBold"
            BorderThickness="0"
            Cursor="Hand"
            Padding="10,5">
                <Button.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                </Button.Effect>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="8" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Pastebin-linkki TextBox -->
            <TextBlock Name="PastebinLinkTextBlock"
           Height="30"
           Width="250"
           Background="#FF2D2D30"
           Foreground="#FF00BFFF"
           TextAlignment="Center"
           FontWeight="SemiBold"
           Padding="5"
           VerticalAlignment="Center"
           Cursor="Hand"
           TextWrapping="Wrap"
           MouseLeftButtonUp="PastebinLink_Click"/>
        </StackPanel>




        <!-- Kortit ScrollViewerissa -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="TiedotPanel" HorizontalAlignment="Left"/>
        </ScrollViewer>
    </Grid>
</Window>
